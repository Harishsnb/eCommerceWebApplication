<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/productforms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="signin-form" action="/signin" method="POST">
            <h4 id ="h4"> Kindly Signin to purchase!</h4>
            <div class="main-form">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email">
            </div>
            <div class="main-form">
                <label for="password">Password</label>
                <input type="password" name="password" id="password">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Signin</button>
            <h4> Not registered? Then Click on Signup to register</h4>
        </form>
    </main>
<%- include('../includes/end.ejs') %>